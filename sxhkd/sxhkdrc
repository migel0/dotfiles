#super + x
#	$HOME/.local/bin/lockscreen

# terminal emulator
super + Return
	kitty

#Default browser
super + shift + Return
	xdg-settings get default-web-browser

##################
#     APPS       #
##################

#ROFI
# rofi Menu
super + space
	rofi -show drun  -show-icons -theme ~/.config/rofi/rofi.rasi
# rofi run
super + shift + space
	rofi -show run  -show-icons -theme ~/.config/rofi/rofi.rasi
# rofi Tab into open window 
super + ctrl + space
	rofi -show window  -show-icons -theme  -theme ~/.config/rofi/rofi.rasi
# rofi search  DONT WORK  finder.sh
#super + alt + space
# rofi -show find -modi find:/~/.config/rofi/bin/finder.sh 

##################
#  Navigation    #
##################

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

#
# bspwm hotkeys
#

# close and kill
super + {_,shift + }q
	bspc node -{c,k}


# quit/restart bspwm
super + shift + {r}
	bspc {quit,wm -r}

# focus the next/previous node in the current desktop
Alt + Tab
	bspc node -f {next,prev}.local

# Send windows to  desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd && $HOME/.config/polybar/launch.sh


# alternate between the tiled and monocle layout 
super + f
	bspc desktop -l next


# MPD
super + shift + u
    ${HOME}/.config/rofi/scripts/mpd.sh

# Screenshot Print
Print
    gnome-screenshot --file=${HOME}/Imagens/captura-$(date "+%d-%m-%Y-%H-%M-%S").png && notify-send -t 4000 --icon=camera-photo-symbolic.symbolic "Screenshot realizado" "Gravado no diretório"
    #import -window root ${HOME}/Imagens/capturas/captura-$(date "+%d-%m-%Y-%H-%M-%S").png && notify-send -t 4000 --icon=camera-photo-symbolic.symbolic "Screenshot realizado" "Gravado no diretório"

shift + Print
    import ${HOME}/Imagens/captura-$(date "+%d-%m-%Y-%H-%M-%S").png && notify-send -t 4000 --icon=camera-photo "Screenshot realizado" "Gravado no diretório"

# program launcher
super + d
        ${HOME}/.config/rofi/scripts/menu_apps.sh


#
# move/resize
#
# expand a window by moving one of its side outward
super + r + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}


# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# move window to next display

super + shift + {Left,Down,Up,Right}
	dir={west,south,north,east}; \
	bspc node -s "$dir.local" --follow \
	    || bspc node -m "$dir" --follow

#######################

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel






# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}



# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on



